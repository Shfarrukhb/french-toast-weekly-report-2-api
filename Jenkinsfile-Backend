pipeline {
    agent {
        kubernetes {
            yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: cli-backend1
            image: amazon/aws-cli
          - name: docker-backend1
            image: docker:19.03.12-dind
            securityContext:
                privileged: true     
         '''
        }
    }
    stages {
            stage('cli login') {
                steps {
                    container('cli-backend1') {
                    sh 'aws ecr get-login-password --region us-west-2 > password.txt'
                    }
                }
            }
            stage('build docker image') {
                steps{
                    container('docker-backend1') {
                        sh 'docker login --username AWS --password-stdin < password.txt 529396670287.dkr.ecr.us-west-2.amazonaws.com'
                        sh 'docker build -t ecr_backend:db . -f src/CM.WeeklyTeamReport.DB/Dockerfile'
                        sh 'docker push 529396670287.dkr.ecr.us-west-2.amazonaws.com/ecr_backend:db'
                        sh 'docker build -t ecr_backend:api . -f src/CM.WeeklyTeamReport.WebAPI/Dockerfile'
                        sh 'docker push 529396670287.dkr.ecr.us-west-2.amazonaws.com/ecr_backend:api'
}
}
}
}
}
